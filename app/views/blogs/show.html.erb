<section>
   <div class="row">
     <div class="col-sm-8 col-sm-offset-2">
       <div class="blog_single">
           <h2><%= @blog.title %></h2>
           <p>: <%= @blog.body %></p>

           <% if is_owner? %>
             <%= link_to "Edit", "/blogs/#{@blog.id}/edit", class: "btn btn-success" %>
             <%= link_to "Delete", "/blogs/#{@blog.id}", {method: :delete, class: "btn btn-danger" }%>
           <% end %>
        </div>
     </div>
   </div>
 </section>
